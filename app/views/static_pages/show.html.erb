<div class="slider-home" data-slide1="https://tea-4.lozi.vn/v1/images/resized/tra-sua-1-3930256-1506652963?w=480&type=s"
  data-slide2="https://media.foody.vn/res/g70/690046/prof/s576x330/foody-mobile-21151718_25803249804-849-636416680003261766.jpg"
  data-slide3="https://media.foody.vn/res/g69/688272/prof/s576x330/foody-mobile-20156079_79092418769-952-636409154717028763.jpg"
  data-current="1">
</div>

<div class="search-bar" style="padding: 15px;">
  <div class="search-form" style="width: 500px;">
    <%= search_form_for @q, url: root_path do |f| %>
      <div class="input-group input-group-lg">
        <div class="form-group has-feedback has-clear input-group-lg">
          <%= f.text_field :title_cont, class: "form-control",
            placeholder: "Search", id: "searchinput" %>
          <span id="searchclear" class="form-control-clear glyphicon
            glyphicon-remove-circle form-control-feedback"></span>
        </div>
        <span class="input-group-btn">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>

</div>

<div class="container-fluid">
  <div class="main-content">
    <div class="row">
      <div class="col-sm-3 main-side-menu">
        <div style="padding: 15px 10px;color: white; height: 60px; background: #fdc9a7; font-size: 1.2em"> Side menu</div>
        <div style="padding: 15px 10px;color: white; height: 60px; background: #fdc1a9; font-size: 1.2em"> Side menu</div>
        <div style="padding: 15px 10px;color: white; height: 60px; background: #fdb0b2; font-size: 1.2em"> Side menu</div>
        <div style="padding: 15px 10px;color: white; height: 60px; background: #fdb0ef; font-size: 1.2em"> Side menu</div>
        <div style="padding: 15px 10px;color: white; height: 60px; background: #b8c2fd; font-size: 1.2em"> Side menu</div>
        <div style="padding: 15px 10px;color: white; height: 60px; background: #d5eefd; font-size: 1.2em"> Side menu</div>
      </div>

      <div class="col-sm-9 main-side-content" style="margin-top: 20px;">
        <div id="pagination" class="apple-pagination">
          <%= paginate @reviews, remote: true %>
        </div>
        <div id="review-zone">
          <%= render "review" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer">

</div>

<style>
  .slider-home {
    height: 93vh;
    transition: 1s;
    animation: fadeBlur 7.2s infinite;
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
  }
</style>
<script type="text/javascript" charset="utf-8">
  var slide1 = 'url('+$('.slider-home').attr('data-slide1')+')';
  var slide2 = 'url('+$('.slider-home').attr('data-slide2')+')';
  var slide3 = 'url('+$('.slider-home').attr('data-slide3')+')';

  function loopSlider(counter) {
    var slide;
    switch(counter%3) {
      case 0:
        slide = slide1;
        break;
      case 1:
        slide = slide2;
        break;
      case 2:
        slide = slide3;
        break;
      default:
        slide = slide1;
        break;
    }
    counter++;
    $('.slider-home').fadeOut(1200).css('background', slide).fadeIn(1500);
    setTimeout(function(){loopSlider(counter)}, 7000);
  }

  loopSlider(0)
</script>
