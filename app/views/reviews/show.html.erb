<div class="container" style="margin-top: 10vh">
  <div class="review-header">
    <div class="row">
      <% if (@cur_review.image != nil) %>
        <div class="col-sm-5"
          style="background-image: url('<%= image_path(@cur_review.image.url) %>'); height: 60vh;
          background-size: cover; background-position: center; background-repeat: no-repeat;">
        </div>
      <% else %>
        <div class="col-sm-5">
        </div>
      <% end %>
      <div class="col-sm-7">
        <div class="" style="font-size: 2em; font-weight: bold">
          <%= @cur_review.title %>
        </div>

        <div class="" style="font-size: 1.5em">
          <%= @cur_review.store %>
          <span style="color: green; font-weight: bold"><%= @cur_review.price %>$</span>
        </div>

        <div class="" style="background: lightgray; border-radius: 5px; min-height: 150px;
          margin-top: 5vh; padding: 10px;font-style: italic">
          <%= @cur_review.content %>
        </div>
      </div>
    </div>
  </div>
</div>
