<div class="container" style="margin-top: 70px;">
  <div class="row" style="font-size: 1.5em;">
    <div class="col-sm-1" style="height: 100%;">
      <p><%= current_user.name %></p>
      <p> Review </p>
    </div>

    <div class="col-sm-11 container" style="background: rgba(15,185,255,0.32);">
      <div class="statistic">
        <p>Review: <%= Review.all.count %></p>
        <p>User: <%= User.all.count %>(
          <span><%= User.where(provider: "facebook").count %> from FB)</span>
        </p>
      </div>

      <div class="review">
        <% Review.all.each do |review| %>
          <div>
            <%= link_to review.title, review %>
            by <span><%= review.user.name %></span>
            at <span style="font-size: .6em"><%= review.created_at %></span>
            <div class="btn btn-primary"
              style="padding: 1px 5px; background: red; color: white; font-size: .7em">
              <%= link_to "X", review, method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

